<%= form_with(model: @feed, local: true, url: coose_new_or_edit) do |form| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= @feed.errors.count %>件のエラーがあります。</h2>
  <ul>

  <% @feed.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>

  <div class="field">
    <%= form.label :画像 %>
    <%= image_tag(feed.image.url) if feed.image && feed.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>


  </div>

  <div class="comment">
    <%= form.label :コメント %>
    <%= form.text_area :comment %>


  </div>

    <%= form.submit %>
<% end %>